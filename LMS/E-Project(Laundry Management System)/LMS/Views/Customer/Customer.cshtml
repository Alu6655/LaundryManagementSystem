@model IEnumerable<LMS.Models.customer>
@{
    ViewBag.Title = "Customer";
}
 <h1 style="margin-top:20px; font-weight:bold; color:white;">Customer</h1>
<div style="margin-top:10px;color:white;">
    <h2>Customer Information</h2>
    <hr />
    <h2>Search Customer</h2>
    @using (Html.BeginForm("Customer", "Customer", FormMethod.Post))
    {
    <div class="form-group">
        <input type="text" placeholder="Enter Customer Contact" name="name" class="form-control" />
        <div class="col-md-2" style="float:right">
            <button class="btn btn-block ">Search</button>
        </div>
    </div>
    }
    <p>
        <hr />
        <br />
        <div class="col-md-2 form-control">
          <button class="btn btn-block">@Html.ActionLink("Create New", "Create")</button> 
        </div>
    </p>
    <hr />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cfn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ccontact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cemail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Caddress)
            </th>
            <th>
                Action
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cfn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ccontact)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cemail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Caddress)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Cid }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Cid })
                </td>
            </tr>
        }
    </table>
</div>


