@model IEnumerable<LMS.Models.priceList_pw>

@{
    ViewBag.Title = "PieceWise";
}
<h1 style="margin-top:20px; font-weight:bold; color:white;">Prices</h1>
<div style="margin-top:10px;">
    <h3>
        PieceWise Prices | @Html.ActionLink("WeightWise Prices", "WeightWise") | @Html.ActionLink("PackageWise Prices", "PackageWise")
    </h3>
    <hr />
    <h2 style="color:white;">PieceWise</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PWid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PWcode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PWservice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PWclothtype)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PWprice)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PWid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PWcode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PWservice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PWclothtype)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PWprice)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PWid }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.PWid })
                </td>
            </tr>
        }

    </table>
    </div>
